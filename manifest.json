{
  "manifest_version": 2,
  "name": "ScrapBook X",
  "version": "0.0.1",

  "description": "Archives the web page.",
  "icons": {
    "32": "resources/scrapbook_32.png"
  },

  "applications": {
    "gecko": {
      "id": "scrapbookx@scrapbook.com",
      "strict_min_version": "45.0.0"
    }
  },

  "background" : {
    "scripts": [ "scripts/bg/index.js" ]
  },
  // "options_page": "pages/options.html",
  "browser_action": {
      "default_icon": "resources/scrapbook_32.png", 
      "default_title": "Process this page with ScrapBook X"
  },
  "content_scripts" : [
    {
      "matches" : [ "http://*/*", "https://*/*" ],
      "js" : [ "scripts/content/content.js" ],
      "run_at" : "document_idle",
      "all_frames" : true
    }
  ],
  // "web_accessible_resources": [
    // "pages/banner.html",
    // "pages/banner.css",
    // "scripts/content/banner.js"
  // ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
    ]
}